  "security":[{
    "basicAuth" : [],
    "ApiKeyAuth" : [],
    "BearerAuth" : []
  }],
  "components": {
    "securitySchemes" : {
      "basicAuth" : {
        "type" : "http",
        "scheme": "basic"
      },
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-KEY"
      },
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "SignUpRequest": {
        "properties": {
          "email": {
            "type": "string",
            "example": "rafal@interview.com"
          },
          "password": {
            "type": "string",
            "example": "VeryG00dPass!"
          },
          "passwordConfirm": {
            "type": "string",
